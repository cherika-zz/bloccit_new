<h1>New Advertisement</h1>

<div class="row">
  <div class="col-md-8">
    <%= form_for @advertisement do |f| %>
    <div class="form-group">
      <%= f.label :title %>
      <%= f.text_field :title, class: 'form-control', placeholder: "Enter ad title" %>
    </div>

    <div class="form-group">
      <%= f.label :copy %>
      <%= f.text_field :copy, class: 'form-control', placeholder: "Enter ad text" %>
    </div>

    <div class="form-group">
      <%= f.label :price %>
      <%= f.text_field :price %>
    </div>

    <div class="form-group">
      <%= f.submit "Save" %>
    </div>
    <% end %>
  </div>
</div>
